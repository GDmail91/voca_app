<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="false"
        android:layout_above="@+id/group_menu"
        tools:context="com.vvn.vocavocani.group.GroupActivity">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="250dp">

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/toolbar_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                app:contentScrim="?attr/colorPrimary"
                app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">

                <RelativeLayout
                    android:id="@+id/group_layout"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    app:layout_collapseMode="parallax">

                    <ImageView
                        android:id="@+id/group_img"
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/test_image"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/group_img"
                        android:layout_alignEnd="@+id/group_img"
                        android:layout_alignRight="@+id/group_img"
                        android:padding="5dp"
                        android:background="#88000000">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="모임장"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorTitle"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginStart="10dp"
                            android:text="ㅇㅇㅇ"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorTitle"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginStart="15dp"
                            android:text="모임원"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorTitle"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginStart="10dp"
                            android:text="00"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorTitle"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="명"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorTitle"/>
                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/group_header"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentBottom="true"
                        android:layout_below="@+id/group_img"
                        android:padding="10dp"
                        android:background="@color/colorPrimary">

                        <TextView
                            android:id="@+id/group_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="모임 이름"
                            android:textSize="23sp"/>

                        <ImageButton
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_toEndOf="@+id/group_title"
                            android:layout_toRightOf="@+id/group_title"
                            android:layout_alignBottom="@+id/group_title"
                            android:layout_margin="0dp"
                            android:padding="0dp"
                            style="@style/Widget.AppCompat.Button.Borderless"
                            android:src="@drawable/checkmark"
                            android:scaleType="fitCenter"/>

                        <LinearLayout
                            android:id="@+id/doing_board"
                            android:layout_width="50dp"
                            android:layout_height="65dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:padding="0dp"
                            android:gravity="center"
                            style="@style/Widget.AppCompat.Button.Borderless"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/checkmark"
                                android:scaleType="fitCenter"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="15dp"
                                android:gravity="center"
                                android:text="수행현황"
                                android:textSize="10sp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/group_rule"
                            android:layout_width="50dp"
                            android:layout_height="65dp"
                            android:layout_toStartOf="@+id/doing_board"
                            android:layout_toLeftOf="@+id/doing_board"
                            android:layout_alignParentBottom="true"
                            android:padding="0dp"
                            android:gravity="center"
                            style="@style/Widget.AppCompat.Button.Borderless"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/checkmark"
                                android:scaleType="fitCenter"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="15dp"
                                android:gravity="center"
                                android:text="모임규칙"
                                android:textSize="10sp"/>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/group_desc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/group_title"
                            android:layout_toStartOf="@+id/group_rule"
                            android:layout_toLeftOf="@+id/group_rule"
                            android:layout_above="@+id/group_tag"
                            android:gravity="center_vertical"
                            android:text="모임소개글소개글소개글소개글소개글소개글소개글소개글소개글소개글소개글소개글소개글소개글"
                            android:maxLines="2"
                            android:ellipsize="end"/>

                        <TextView
                            android:id="@+id/group_tag"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:gravity="bottom"
                            android:text="#tag #tag #tag"/>


                    </RelativeLayout>

                </RelativeLayout>

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:fitsSystemWindows="true"
                    app:layout_collapseMode="pin"
                    android:title="">

                    <TextView
                        android:id="@+id/toolbar_title"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp"
                        android:gravity="center_vertical"
                        android:text="모임 이름"
                        android:textColor="@color/colorTitle"
                        android:textSize="20sp" />
                </android.support.v7.widget.Toolbar>
            </android.support.design.widget.CollapsingToolbarLayout>

        </android.support.design.widget.AppBarLayout>

        <include android:id="@+id/group_body"
            layout="@layout/group_board"/>

    </android.support.design.widget.CoordinatorLayout>

    <LinearLayout
        android:id="@+id/group_menu"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:weightSum="3">

        <Button
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="게시물"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="등록문제"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="질문하기"/>
    </LinearLayout>

</RelativeLayout>